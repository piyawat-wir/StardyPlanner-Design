{
	"compilerOptions": {
	  "target": "es5",
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "forceConsistentCasingInFileNames": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "incremental": true,
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["./src/*"]
	  },
	  "typeRoots": ["./global.d.ts", "/node_modules/@types"]
	},
	"include": ["**/*.ts"],
	"exclude": ["./node_modules"]
  }
  